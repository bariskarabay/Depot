<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= truncate(strip_tags(product.description), length: 80) %></td>
        <td><%= product.image_url %></td>
        <td><%= image_tag(product.image_url,class: 'list_image')%></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Goster', product %></td>
        <td><%= link_to 'Duzenle', edit_product_path(product) %></td>
        <td><%= link_to 'Sil', product, method: :delete, data: { confirm: ' Silmek istiyor musunuz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

